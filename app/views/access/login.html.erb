<% @page_title = "Admin Login" %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <%= form_tag(access_attempt_login_path, :method => :post) do %>
    <%= label_tag(:username) %>
    <%= text_field_tag(:username, params[:username], class:'form-control') %>
    <br />
    <%= label_tag(:password_digest) %></td>
    <%= password_field_tag(:password_digest, '', class: 'form-control') %>
    <br />
    <%= submit_tag("Log In", class: "btn btn-primary") %>
  <% end %>
  </div>
</div>