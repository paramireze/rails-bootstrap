<%= form_for(event) do |f| %>
  <%= error_messages_for(f.object) %>

    <div class="form-group row">
      <%= f.label :title, class: 'col-xs-2 col-form-label'  %>
      <div class="col-xs-10">
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :description, class: 'col-xs-2 col-form-label'  %>
      <div class="col-xs-10">
        <%= f.text_area(:description, class: 'form-control', :size => '40x10') %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :startDate, class: 'col-xs-2 col-form-label' %>
      <div class="col-xs-10">
        <%= f.datetime_select(:startDate, :order => [:month, :day, :year], ampm: true) %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :distance, class: 'col-xs-2 col-form-label' %>
      <div class="col-xs-10">

        <%= collection_select(:event, :distance_id, Distance.all, :id, :distance_string, prompt: true, :include_blank => true) %>
      </div>
    </div>

    <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
